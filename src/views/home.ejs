<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); -%>
</head>
<body>
    <div>
        <%- include('./partials/header'); -%>
    </div>

	<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
		<ol class="carousel-indicators">
		  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		</ol>
		<div class="carousel-inner">
		  <div class="carousel-item active">
			<img class="d-block w-100" src="./img/banner.jpg" alt="First slide">
		  </div>
		  <div class="carousel-item">
			<img class="d-block w-100" src="./img/banner.jpg" alt="Second slide">
		  </div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		  <span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		  <span class="carousel-control-next-icon" aria-hidden="true"></span>
		  <span class="sr-only">Next</span>
		</a>
	  </div>
	
	<div class="category-content">
		<div class="row">
			<div class="col-lg-6">
				<div class="row">
					<div class="col-md-6">
						<div class="card-category">
							<img class="img-category" style="width: 100%; margin-bottom: 10px;" src="./img/1.jpg" alt="">
							<a href="#" class="title-category">HOA HỒNG</a>
						</div>
						<div class="card-category">
							<img class="img-category" style="width: 100%; margin-bottom: 10px;" src="./img/2.jpg" alt="">
							<a href="#" class="title-category">HOA HỒNG</a>
						</div>
					</div>
					<div style="margin: auto 0" class="col-md-6">
							<img class="img-category" style="width: 100%; margin-bottom: 10px;" src="./img/doc.jpg" alt="">
							<a href="#" class="title-category">HOA HỒNG</a>
					</div>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="row">
					<div class="col-md-6">
						<div class="card-category">
							<img class="img-category" style="width: 100%; margin-bottom: 10px;" src="./img/1.jpg" alt="">
							<a href="#" class="title-category">HOA HỒNG</a>
						</div>
						<div class="card-category">
							<img class="img-category" style="width: 100%; margin-bottom: 10px;" src="./img/2.jpg" alt="">
							<a href="#" class="title-category">HOA HỒNG</a>
						</div>
					</div>
					<div style="margin: auto 0" class="col-md-6">
							<img class="img-category" style="width: 100%; margin-bottom: 10px;" src="./img/doc.jpg" alt="">
							<a href="#" class="title-category">HOA HỒNG</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="product-content">
		<div class="title-content">
			<h1>BÁN CHẠY NHẤT</h1>
			<p>TOP NHỮNG SẢN PHẨM BÁN CHẠY NHẤT</p>
		</div>
		<div class="list-items row">
			<% if (productsTop) {
				productsTop.map( product => { %>
					<div class="col-lg-3 col-md-6 mt-2" >
						<div class="item">
							<img class="card-img-top" src="uploads/<%=product.image%>" alt="Card image cap">
							<div class="card-body">
							<h5 class="card-title"><%= product.name %></h5>
							<p class="card-text"><%= product.price.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %></p>
							<a href="#" class="btn btn-product">Thêm vào giỏ hàng</a>
						</div>
						</div>
					</div>
				<% })
			}%>
		</div>
</div>

<div class="product-content">
	<div class="title-content">
		<h1>SẢN PHẨM MỚI</h1>
		<p>TOP NHỮNG SẢN PHẨM MỚI</p>
	</div>
	<div class="list-items row">
		<% if (productsNew) {
			productsNew.map( product => { %>
				<div class="col-lg-3 col-md-6 mt-2" >
					<div class="item">
						<img class="card-img-top" src="uploads/<%=product.image%>" alt="Card image cap">
						<div class="card-body">
						<h5 class="card-title"><%= product.name %></h5>
						<p class="card-text"><%= product.price.toLocaleString('it-IT', {style : 'currency', currency : 'VND'}); %></p>
						<a href="#" class="btn btn-product">Thêm vào giỏ hàng</a>
					</div>
					</div>
				</div>
			<% })
		}%>
	</div>
</div>

	

    <%- include('./partials/plugin'); -%>
</body>
</html>